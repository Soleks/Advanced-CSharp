<Window x:Class="WpfApp1.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Editor" Height="300" Width="300">
    <Grid>
        <WrapPanel>
            <TextBox Name="depart" HorizontalAlignment="Left" Height="23" Margin="71,55,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" TextChanged="depart_TextChanged" />
            <TextBox Name="firstName" HorizontalAlignment="Left" Height="23" Margin="71,55,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" TextChanged="firstName_TextChanged" />
            <TextBox Name="lastName" HorizontalAlignment="Left" Height="23" Margin="71,55,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" TextChanged="lastName_TextChanged" />
        </WrapPanel>
    </Grid>
</Window>